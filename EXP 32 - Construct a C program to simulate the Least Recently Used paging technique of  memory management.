#include <stdio.h>

int main() {
    int frames, pages, frame[10], page[30];
    int i, j, k, l, count = 0, min, next[10];
    int found;

    printf("Enter number of frames: ");
    scanf("%d", &frames);

    printf("Enter number of pages: ");
    scanf("%d", &pages);

    printf("Enter page reference string: ");
    for (i = 0; i < pages; i++)
        scanf("%d", &page[i]);

    for (i = 0; i < frames; i++)
        frame[i] = -1;

    printf("\nPage Reference String → Frame Status\n");

    for (i = 0; i < pages; i++) {
        found = 0;

        // Check if page already exists in frame
        for (j = 0; j < frames; j++) {
            if (frame[j] == page[i]) {
                found = 1;
                break;
            }
        }

        if (found == 0) { // Page Fault
            // If empty frame available
            for (j = 0; j < frames; j++) {
                if (frame[j] == -1) {
                    frame[j] = page[i];
                    found = 1;
                    count++;
                    break;
                }
            }

            // If no empty frame, apply LRU
            if (found == 0) {
                // Track last used for each frame page
                for (j = 0; j < frames; j++) {
                    next[j] = 0;
                    for (k = i - 1; k >= 0; k--) {
                        if (frame[j] == page[k]) {
                            next[j] = k;
                            break;
                        }
                    }
                }

                min = next[0];
                l = 0;
                for (j = 1; j < frames; j++) {
                    if (next[j] < min) {
                        min = next[j];
                        l = j;
                    }
                }
                frame[l] = page[i];
                count++;
            }

            // Print frame contents
            printf("%2d → ", page[i]);
            for (j = 0; j < frames; j++) {
                if (frame[j] != -1)
                    printf("%d ", frame[j]);
                else
                    printf("- ");
            }
            printf("\n");
        } else {
            printf("%2d → No replacement (Hit)\n", page[i]);
        }
    }

    printf("\nTotal Page Faults = %d\n", count);
    return 0;
}
