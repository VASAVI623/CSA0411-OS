#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <fcntl.h>
#include <sys/stat.h>
#include <dirent.h>
#include <string.h>

int main() {
    int fd, newfd;
    char buffer[50];
    struct stat fileStat;

    // 1. Create and open file using open()
    fd = open("demo.txt", O_CREAT | O_RDWR, 0777);
    if (fd < 0) {
        perror("File open failed");
        exit(1);
    }
    write(fd, "Hello UNIX System Calls!", 25);
    printf("File 'demo.txt' created and data written.\n");

    // 2. fcntl() - duplicate file descriptor
    newfd = fcntl(fd, F_DUPFD, 0);
    if (newfd < 0) {
        perror("fcntl failed");
        exit(1);
    }
    printf("File descriptor duplicated using fcntl().\n");

    // 3. lseek() - move file pointer to beginning
    lseek(fd, 0, SEEK_SET);
    read(fd, buffer, sizeof(buffer)-1);
    buffer[24] = '\0';
    printf("Data read using lseek(): %s\n", buffer);

    // 4. stat() - get file information
    if (stat("demo.txt", &fileStat) < 0) {
        perror("stat failed");
        exit(1);
    }
    printf("\nFile information using stat():\n");
    printf("File Size: %ld bytes\n", fileStat.st_size);
    printf("Number of Links: %ld\n", fileStat.st_nlink);
    printf("File Permissions: %o\n", fileStat.st_mode & 0777);

    // 5. opendir() and readdir() - list directory contents
    DIR *dir;
    struct dirent *entry;
    dir = opendir(".");
    if (dir == NULL) {
        perror("opendir failed");
        exit(1);
    }
    printf("\nDirectory listing using opendir() and readdir():\n");
    while ((entry = readdir(dir)) != NULL) {
        printf("%s\n", entry->d_name);
    }
    closedir(dir);

    // Close file descriptors
    close(fd);
    close(newfd);

    return 0;
}
