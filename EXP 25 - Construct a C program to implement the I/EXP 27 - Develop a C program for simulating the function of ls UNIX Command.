#include <stdio.h>
#include <stdlib.h>
#include <dirent.h>

int main(int argc, char *argv[]) {
    DIR *dir;
    struct dirent *entry;

    // If no directory is given, use current directory "."
    char *dirname = (argc > 1) ? argv[1] : ".";

    dir = opendir(dirname);
    if (dir == NULL) {
        perror("opendir failed");
        exit(1);
    }

    printf("Listing files in directory: %s\n", dirname);

    while ((entry = readdir(dir)) != NULL) {
        printf("%s\n", entry->d_name);
    }

    closedir(dir);
    return 0;
}
