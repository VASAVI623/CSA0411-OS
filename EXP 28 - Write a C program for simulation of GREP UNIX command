#include <stdio.h>
#include <stdlib.h>
#include <string.h>

#define MAX_LINE 1024

int main(int argc, char *argv[]) {
    FILE *fp;
    char line[MAX_LINE];
    char *pattern;

    if (argc < 3) {
        fprintf(stderr, "Usage: %s <pattern> <filename>\n", argv[0]);
        return EXIT_FAILURE;
    }

    pattern = argv[1];
    fp = fopen(argv[2], "r");
    if (fp == NULL) {
        perror("fopen");
        return EXIT_FAILURE;
    }

    printf("Searching for '%s' in file %s...\n\n", pattern, argv[2]);

    int line_no = 1;
    while (fgets(line, sizeof(line), fp)) {
        if (strstr(line, pattern)) {
            printf("Line %d: %s", line_no, line);
        }
        line_no++;
    }

    fclose(fp);
    return EXIT_SUCCESS;
}
