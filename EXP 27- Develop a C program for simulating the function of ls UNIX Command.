#include <stdio.h>
#include <stdlib.h>
#include <dirent.h>
#include <errno.h>

int main(int argc, char *argv[]) {
    DIR *d;
    struct dirent *dir;
    char *path;

    // If no argument is given, use current directory
    if (argc < 2) {
        path = ".";
    } else {
        path = argv[1];
    }

    d = opendir(path);
    if (d == NULL) {
        perror("opendir");
        return EXIT_FAILURE;
    }

    printf("Listing of directory: %s\n", path);
    while ((dir = readdir(d)) != NULL) {
        // Skip . and ..
        if (dir->d_name[0] == '.' && 
           (dir->d_name[1] == '\0' || (dir->d_name[1] == '.' && dir->d_name[2] == '\0'))) {
            continue;
        }
        printf("%s\n", dir->d_name);
    }

    closedir(d);
    return EXIT_SUCCESS;
}
