#include <stdio.h>

int main() {
    int frames, pages, frame[10], page[30];
    int i, j, k, l, count = 0, found, pos, farthest, index;

    printf("Enter number of frames: ");
    scanf("%d", &frames);

    printf("Enter number of pages: ");
    scanf("%d", &pages);

    printf("Enter page reference string: ");
    for (i = 0; i < pages; i++)
        scanf("%d", &page[i]);

    for (i = 0; i < frames; i++)
        frame[i] = -1;

    printf("\nPage Reference String → Frame Status\n");

    for (i = 0; i < pages; i++) {
        found = 0;

        // Check if page already exists in frame
        for (j = 0; j < frames; j++) {
            if (frame[j] == page[i]) {
                found = 1;
                break;
            }
        }

        if (found == 0) { // Page Fault
            // If empty frame available
            for (j = 0; j < frames; j++) {
                if (frame[j] == -1) {
                    frame[j] = page[i];
                    found = 1;
                    count++;
                    break;
                }
            }

            // If no empty frame, apply Optimal Replacement
            if (found == 0) {
                farthest = -1;
                pos = -1;

                for (j = 0; j < frames; j++) {
                    for (k = i + 1; k < pages; k++) {
                        if (frame[j] == page[k]) {
                            index = k;
                            break;
                        }
                    }
                    if (k == pages) { // page not used again
                        pos = j;
                        break;
                    }
                    if (index > farthest) {
                        farthest = index;
                        pos = j;
                    }
                }

                frame[pos] = page[i];
                count++;
            }

            // Print frame contents
            printf("%2d → ", page[i]);
            for (j = 0; j < frames; j++) {
                if (frame[j] != -1)
                    printf("%d ", frame[j]);
                else
                    printf("- ");
            }
            printf("\n");
        } else {
            printf("%2d → No replacement (Hit)\n", page[i]);
        }
    }

    printf("\nTotal Page Faults = %d\n", count);
    return 0;
}
