#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int main() {
    int n, i, head, seek=0;
    printf("Enter number of requests: ");
    scanf("%d", &n);

    int req[n];
    printf("Enter request queue: ");
    for(i=0;i<n;i++) scanf("%d",&req[i]);

    printf("Enter initial head position: ");
    scanf("%d",&head);

    for(i=0;i<n;i++){
        seek += abs(req[i]-head);
        head = req[i];
    }

    printf("Total head movement = %d\n", seek);
    printf("Average seek time = %.2f\n", (float)seek/n);
    return 0;
}
